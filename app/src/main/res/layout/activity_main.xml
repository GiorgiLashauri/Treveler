<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/traveler"
    tools:context="geoton.treveler.MainActivity">


    <Button
        android:id="@+id/button2"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="108dp"
        android:onClick="startMapsActivity"

        android:layout_marginEnd="13dp"
        android:background="@color/colorBackgroundainActivity"
        android:text="maps" />

    <Button
        android:onClick="startCategoryActivity"
        android:id="@+id/button"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_alignBaseline="@+id/button2"
        android:layout_alignBottom="@+id/button2"

        android:layout_alignParentStart="true"
        android:layout_marginStart="12dp"
        android:background="@color/colorBackgroundainActivity"
        android:text="MOnuments" />

    <TextView

        android:text="Make your Way"
        android:textSize="22sp"
        android:textColor="@color/textcolor"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="87dp"
        android:id="@+id/textView" />

    <ImageView
        android:background="@drawable/georgia_medium"
        android:alpha="0.5"
        android:layout_width="300dp"
        android:layout_height="150dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:id="@+id/imageView" />


</RelativeLayout>
